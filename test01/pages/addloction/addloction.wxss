page {
  background-color: #fff;
}
.section{
  width: 80%;
  height: auto;
  margin: auto;
  position: relative;
}
.input {
  width: 100%;
  height: 3rem;
  display: block;
  margin: auto;
  background-color: #fff;
  border-bottom: 1px solid #cccccc;
  z-index: 99;
}

.section .input placeholder-style {
  color: #fff;
  margin-left: 1rem;
}

.sug_info {
  width: 100%;
  height: 10rem;
  margin: auto;
  overflow-y: scroll;
  background-color: #ffffff;
}
.sug_info view{
  line-height: 2;
  border-bottom: 1px solid #000000;
}

.map_container {
  height: 300px;
  width: 100%;
}

.map {
  height: 100%;
  width: 100%;
}

.rgc_info {
  padding: 0 5px;
}

.footer{
  width: 100%;
  height: 3rem;
  position: fixed;
  bottom: 0rem;
}
.footer button{
  background-color: #000000;
  color: #ffffff;
  font-weight: normal;
}
.picker{
  width: 80%;
  height: 3rem;
  margin: auto;
  line-height: 3rem;
  border-bottom: 1px solid #cccccc;
}