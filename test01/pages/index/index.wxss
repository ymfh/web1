/**index.wxss**/
.top {
  width: 100%;
  height: 5rem;
  /* background-color: antiquewhite; */
}

.top .top-top {
  font-size: 20px;
  font-weight: 600;
  margin-left: 1rem;
  line-height: 3rem;
}

.top-step {
  width: 100%;
  height: 40px;
  /* background-color: antiquewhite; */
}

.top-step-left {
  width: 70%;
  height: 40px;
  background-color: #ececec;
  margin-left: 1rem;
  border-radius: 0.5rem;
  float: left;
}

.top-step-left image {
  width: 1.5rem;
  height: 1.5rem;
  margin-top: 0.5rem;
  margin-left: 0.5rem;
  float: left;
  color: #d7d7d7;
}

.top-step-left input {
  width: 83%;
  float: left;
  height: 40px;
  line-height: 40px;
  margin-left: 1rem;
  color: #d7d7d7;
  font-size: 0.8rem;
}

.top-step-right {
  width: 20%;
  height: 40px;
  /* background-color: aqua; */
  float: right;
  margin-right: 1rem;
}

.top-step-right image {
  width: 1.5rem;
  height: 1.5rem;
  float: right;
  margin-top: 0.3rem;
  margin-right: 0.5rem;
}

.nav {
  width: 92%;
  height: 12rem;
  /* background-color: aqua; */
  margin: 2rem auto;
  border-radius: 1rem;
  overflow: hidden;
}

.nav swiper {
  height: 12rem;
}

.nav image {
  width: 100%;
  height: 12rem;
  border-radius: 1rem;
}

.nav1 {
  width: 92%;
  height: 9rem;
  margin: auto;
  /* background-color: #ececec; */
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 2rem;
}

.nav1 view {
  width: 30%;
  height: 4rem;
  border-radius: 0.5rem;
  /* background-color: antiquewhite; */
  box-shadow: 0.1rem 0.1rem 1.5rem #ececec;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-evenly;
  align-items: center;
  font-weight: 600;
}

.nav1 view image {
  width: 1.5rem;
  height: 1.5rem;
}

.title1 {
  font-weight: 600;
  font-size: 1.5rem;
  margin-left: 5%;
}

.newshop {
  width: 94%;
  height: 18rem;
  margin: auto;
  /* background-color: #ececec; */
  border-radius: 1rem;
  /* overflow: hidden; */
  margin-top: 2rem;
  margin-bottom: 2rem;
  display: -webkit-box;
  overflow-x: scroll;
  overflow-y: hidden;
}

.newshop::-webkit-scrollbar {
  width: 0;
}

.box {
  width: 600%;
  height: 16rem;
  margin-top: 1rem;
  transition: all 0.5s;
}

.newshop .box {
  animation: marginLeft 10s infinite;
  animation-direction: alternate;
  /* 来回滚动*/
  animation-timing-function: linear;
  /*匀速运动*/
}

.box view {
  width: 10%;
  height: 16rem;
  /* border: 3px solid #ececec; */
  float: left;
  margin-left: 1rem;
  border-radius: 1rem;
  box-shadow: 0.1rem 0.1rem 2rem #ececec;
}

.box view image {
  width: 80%;
  height: 8rem;
  margin-left: 1.5rem;
  margin-top: 1rem;
}

.h1 {
  width: 100%;
  height: 2.5rem;
  font-weight: 600;
  display: block;
  line-height: 1.5;
  font-size: 0.9rem;
  margin-left: 0.4rem;

  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.box view .p1 {
  width: 90%;
  display: block;
  line-height: 1.5;
  font-size: 0.9rem;
  margin-left: 0.4rem;
  color: #cfadad;
  overflow: hidden;
}

.box view .span1 {
  line-height: 1.5;
  font-size: 0.8rem;
  margin-left: 0.4rem;
  color: #e85656;
}

.box view .span2 {
  line-height: 1.5;
  font-size: 1.2rem;
  color: #e85656;
  font-weight: 600;
}

.tui {
  width: 92%;
  height: auto;
  margin: auto;
  margin-top: 1rem;

}

.tui .flex {
  display: flex;
  flex-flow: row wrap;
  justify-content: space-around;
  align-items: center;
}

.tui .little {
  width: 45%;
  height: 18rem;
  /* border: 1px solid #ececec; */

  margin-bottom: 1rem;
}

.tui .little .img1 {
  width: 90%;
  height: 7rem;
  
  display: block;
  margin: auto;
  margin-bottom: 1rem;
}

.tui .little .img2 {
  width: 100%;
  height: 9rem;
  margin-top: 1rem;
}

.h2 {
  font-weight: 600;
  display: block;
  line-height: 1.5;
  font-size: 0.8rem;
  margin-left: 0.4rem;
  margin-bottom: 0.7rem;
  
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -webkit-box;
}

.button1 {
  padding: 0.5rem 0.6rem;
  font-size: 0.7rem;
  background-color: #ffd1c6;
  border-radius: 0.5rem;
  color: #a86554;
}

.tui .little .span {
  width: 100%;
  height: 1.5rem;
  margin-top: 1rem;
}

.tui .little .span text:first-child {
  line-height: 1.5;
  font-size: 0.8rem;
  margin-left: 0.4rem;
  color: #e85656;
}

.button2 {
  padding: 0.5rem 0.8rem;
  font-size: 0.7rem;
  background-color: #ffd1c6;
  border-radius: 1rem;
  color: #a86554;
}

.tui .little .span text:last-child {
  line-height: 1.5;
  font-size: 1.2rem;
  color: #e85656;
  font-weight: 600;
}

.span2 {
  font-size: 0.9rem;
  margin-left: 0.4rem;
  color: #cccccc;
}