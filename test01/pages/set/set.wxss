/* pages/set/set.wxss */
.set {
  height: 39rem;
  /* background-color: #f5f5f5; */
}

.top {
  width: 90%;
  height: 10rem;
  margin: auto;
  /* background-color: ; */
  box-shadow: 0.1rem 0.1rem 0.3rem #cccccc;
  border-radius: 1rem;
  margin-top: 1rem;
}

.top-mid {
  width: 95%;
  height: 5.5rem;
  border-bottom: 0.08rem solid #f5f5f5;
  margin: auto;
}

.top-mid view:nth-child(1) {
  width: 20%;
  height: 5rem;
  margin-left: 4%;
  float: left;
}

.top-mid view:nth-child(1) image {
  width: 90%;
  height: 90%;
  margin-top: 5%;
  border-radius: 50%;
}

.top-mid view:nth-child(2) {
  width: 40%;
  height: 5rem;
  margin-left: 2%;
  float: left;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.top-mid view:nth-child(2) text {
  display: block;
}

.top-mid view:nth-child(2) text:first-child {
  font-weight: 600;
}

.top-mid view:nth-child(2) text:first-child {
  font-size: 1.2rem;
}

.top-mid view:nth-child(3) {
  width: 10%;
  height: 5rem;
  margin-right: 2%;
  float: right;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.top-mid view:nth-child(3) {
  width: 10%;
  height: 5rem;
  margin-right: 2%;
  float: right;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.img {
  width: 2.5rem;
  height: 2.5rem;
}

.a {
  line-height: 4.5rem;
  font-size: 1.1rem;
  color: #676767;
  margin-left: 1rem;
}
.nav{
  width: 90%;
  height: auto;
  margin: auto;
  margin-top: 1rem;
  border-radius: 1rem;
  box-shadow: 0.1rem 0.1rem 0.3rem #cccccc;
}
.border{
  width: 92%;
  border-bottom: 0.08rem solid #f5f5f5;
  margin: auto;
}
.border0{
  width: 92%;
  margin: auto;
}
.img{
  float: right;
  margin-top: 0.5rem;
}
.but{ 
  height: 4rem;
  font-weight: normal;
  color: #d8d8d8;
  background-color: #000000;
  margin-top: 1rem;
  line-height: 3rem;
  border-radius: 1rem;
  font-size: 1.2rem;
}