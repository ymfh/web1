/* pages/collect/collect.wxss */
.box{
  margin: 0;
  padding: 0;
}
.q{
  clear: both;
}
.top{
  margin: 0 auto;
  margin-top: 1rem;
}
.top ul{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
}
.main{
  width: 95%;
  margin: 0 auto;
  margin-top: 1rem;
}
.left{
  margin-top: 1rem;
  float: left;
  width: 8rem;
  height: 7rem;
  box-shadow: 0.2rem 0.1rem #ececec;
}
.left image{
  width: 100%;
  height: 100%;
  border-radius: 5px;
  z-index: 99;
}
.right{
  margin-top: 1rem;
  float: left;
  width: 14rem;
  height: 7rem;
}
.right .s{
  width: 95%;
  margin: 0 auto;
  font-weight: bold;
  margin-top: 0.5rem;
}
.right .x{
  width: 85%;
  margin: 0 auto;
  font-weight: bold;
  margin-top: 2rem;
  text-align: right;
}
