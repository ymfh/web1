/* pages/ucenter/ucenter.wxss */
.top {
  width: 100%;
  height: 15rem;
  background-color: #1e1e1e;
}

.top .top-top {
  width: 100%;
  height: 3rem;
}

.top .top-top image {
  width: 1.5rem;
  height: 1.5rem;
  float: right;
  margin-right: 2rem;
  margin-top: 1rem;
}

.top-mid {
  width: 100%;
  height: 5rem;
}

.top-mid view:nth-child(1) {
  width: 20%;
  height: 5rem;
  margin-left: 4%;
  float: left;
}

.top-mid view:nth-child(1) image {
  width: 90%;
  height: 90%;
  margin-top: 5%;
}

.top-mid view:nth-child(2) {
  width: 40%;
  height: 5rem;
  margin-left: 2%;
  float: left;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.top-mid view:nth-child(2) text {
  display: block;
  color: #ffffff;
}

.top-mid view:nth-child(2) text:first-child {
  font-size: 1.2rem;
}

.top-mid view:nth-child(3) {
  width: 10%;
  height: 5rem;
  margin-right: 2%;
  float: right;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
}

.top-mid view:nth-child(3) image {
  width: 2rem;
  height: 2rem;
}

.top-set {
  width: 100%;
  height: 5rem;
  margin-top: 1rem;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: flex-start;
  color: #ffffff;
}

.top-set view {
  width: 33%;
  height: 5rem;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
}

.top-set view text:first-child {
  font-size: 1.3rem;
}

.nav {
  width: 90%;
  height: 8rem;
  margin: auto;
  border-radius: 1rem;
  margin-top: 2rem;
  box-shadow: 0.1rem 0.1rem 0.5rem #cccccc;
  margin-bottom: 2rem;
}

.nav-top {
  width: 100%;
  height: 3rem;
  line-height: 3rem;
}

.nav-top text:first-child {
  font-weight: 600;
  font-family: "黑体";
  margin-left: 1rem;
  font-size: 1.2rem;
  float: left;
}

.nav-top text:last-child {
  margin-right: 1rem;
  float: right;
  color: #cccccc;
}

.nav-set {
  width: 100%;
  height: 5rem;
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
}

.nav-set view {
  width: 20%;
  height: 3rem;
  display: flex;
  flex-flow: column wrap;
  justify-content: space-around;
  align-items: center;
}

.nav-set view image {
  width: 1.5rem;
  height: 1.5rem;
}

.nav-set view text {
  font-size: 0.9rem;
  font-family: "宋体";
  font-weight: normal;
}

.tui {
  font-weight: 600;
  font-size: 1.3rem;
  font-family: "黑体";
  margin-left: 1.5rem;
}

.jian {
  width: 100%;
  height: auto;
  margin-top: 2rem;
  column-count: 2;
  column-gap: 1rem;
}

.jian view {
  width: 100%;
  height: auto;
  box-shadow: 0.1rem 0.1rem 0.4rem #cccccc;
  float: left;
  margin: 0% 3%;
  margin-bottom: 1rem;
}

.jian view image {
  width: 70%;
  height: 8rem;
  display: block;
  margin: auto;
  margin-top: 1rem;
}
.jian view .span1{
  display: block;
  margin-left: 1rem;
  font-size: 0.6rem;
  line-height: 1.5;
}
.jian view .span2{
  margin-left: 1rem;
  float: left;
  font-size: 0.6rem;
  line-height: 3;
  color: #cccccc;
}
.jian view .span3{
  margin-left: 1rem;
  float: right;
  margin-right: 0.5rem;
  line-height: 2;
  color: chocolate;
}

.header{
  border-radius: 50%;
}